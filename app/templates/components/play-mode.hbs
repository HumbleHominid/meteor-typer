{{#each meteors as |meteor index|}}
    {{meteor-display data=meteor}}
{{/each}}
<textarea type="text" rows="1" oninput={{action 'testMeteors'}} class="type-area" placeholder="Type responses here" />
<div class="display-text">
    <div class="lives-desc">Lives:</div>
    <div class="lives-value">{{lives}}</div>
    <div class="score-desc">Score:</div>
    <div class="score-value">{{score}}</div>
</div>
